@import './fonts.styl'
@import './slider.styl'

html
  font-size 14px

body
  margin 0
  font-family Muller

.hidden
  overflow: hidden;

p
ul
h1
  margin 0
  padding 0

a
  text-decoration: none

.wrapper
  max-width 1140px
  margin 0 auto

.btn
  padding 1.5rem
  border-radius: 30px
  border 1px solid $blue
  color $blue
  background-color transparent
  font-size 1.1rem
  font-family MullerBold
  transition .2s linear
  will-change:  background-color, color
  outline-color transparent
  &:hover
    background-color $blue
    color #fff
    cursor pointer

.btn-blue
  background-color $blue
  border-radius: 10px
  color #fff
  font-family MullerBold
  outline-color transparent
  transition .2s linear
  will-change: background-color, color, border-color
  border 1px solid transparent
  padding 1rem 2rem
  &:hover
    background-color #fff
    border-color $blue
    cursor pointer
    color $blue

.btn-red
  background-color $red
  border-radius: 3px
  box-shadow 0px 2px 6px rgba($red, .5)
  transition .2s linear
  color #fff
  font-family MullerBold
  font-size 1rem
  border 2px solid transparent
  will-change: background-color, color, cursor, border
  padding 1rem 1.5rem
  outline-color transparent
  display block
  position relative
  &:hover
    cursor pointer
    background-color #fff
    color $darkgray
    border-color $red
  &:active
    top 1px

.blue
  color $blue

.main__title
  font-size responsive 1.2rem 4.2rem
  color $blue
  font-family MullerBold
  text-align center
